@import 'partial/variables'

.msg
  margin-top mg-top
  width 10rem
  .item
    border-bottom 1px solid color-border
    padding (20/75)rem
  header
    display flex
    width (10 - 40/75)rem
    padding (10/75)rem 0
    .img-wrap
      width w=1.2rem
      height w
      img
        border-radius 50%
        width w
        height w
    .info
      width 100%
      display flex
      flex-direction column
      justify-content center
      .info-item
        display flex
        justify-content space-between
        padding 0 (15/75)rem
        height 0.62rem
        line-height 0.62rem
        span
          font-size size-title
        .s
          color color-hover - 60
      .circle
        display inline-block
        width 0.3rem
        height 0.3rem
        background-color color-green
        border-radius 50%